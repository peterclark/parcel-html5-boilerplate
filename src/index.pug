doctype html
head
  meta(charset='utf-8')
  meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
  meta(name="description" itemprop="description" content="We perform flute and violin music for San Antonio weddings, receptions and events.")
  meta(name="keywords" itemprop="keywords" content="San Antonio Wedding Music, Reception Music, Event Music, Violin Music, Flute Music")
  link(href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css?family=Quintessential' rel='stylesheet' type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.8.0/css/pikaday.min.css' rel='stylesheet' type='text/css')
  link(href='index.styl' rel='stylesheet' type='text/css')
  title Flute & Violin

body
  //if IE
    p.browserupgrade
      | You are using an 
      strong outdated
      |  browser. Please 
      a(href='https://browsehappy.com/') upgrade your browser
      |  to improve your experience and security.

  // hidden form to allow submission of form data to netlify
  form(name='booking' netlify netlify-honeypot='bot-field' hidden)
    input(type='text' name='full_name')
    input(type='text' name='mobile')
    input(type='text' name='event_date')
    input(type='text' name='event_location')
    select(type='text' name='services' multiple)
    input(type='checkbox' name='contract_accepted')
  
  // scripts
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/moment.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.8.0/pikaday.min.js')
  script(src='index.js')
  script.
    const datepicker = new Pikaday({ 
      field: $('#eventDate')[0],
      minDate: moment().add(1, 'day').toDate(),
      maxDate: moment().add(365, 'days').toDate(),
      format: 'D MMMM, YYYY',
    });
    $('.dropdown').dropdown()
    $('.checkbox').checkbox()
