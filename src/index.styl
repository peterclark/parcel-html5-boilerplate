body
  background-color: #efefef
  
.App
  display: flex
  flex-direction: column
  min-height: 100vh
  
.container
  display: flex
  flex-grow: 1
  
@media (max-width: 1100px) {
  .container {
    flex-direction: column
  }
}
  
main
  padding: 5em 5em 0 5em
  
aside
  display: flex
  flex-direction: column
  border: 5px solid lightgray
  box-shadow: 0px 10px 10px 0px
  background: #e8e8e8
  opacity: .75
  align-items: center
  margin: 5em
  min-width: 25%
  
footer
  height: 275px
  background-image: url("grass1.png");
  
.sun-icon
  margin: auto 0
  
.sun.icon
  font-size: 150px
  color: goldenrod
  margin: 1px solid red
  
  
h1
  font-size: 4em
  
h2
  font-size: 2em
  color: darkred
  padding-top: 1em
  
p
  line-height: 1.5em
  font-size: 1.2em
  
  
.location
  text-align: center
  width: 75%
  margin: 0 0 2em 0
  font-weight: bold
  
.message
  width: 75%
  margin: 0 0 2em 0
  font-weight: bold
  text-align: left
  
.message h2
  text-align: center
  
  

  
  